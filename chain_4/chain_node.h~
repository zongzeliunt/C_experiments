class chain_node {
	public:
		chain_node(int input_data);
		chain_node *get_next_pointer();		
		void connect_next(chain_node *next_node);
		void show_data();
		void modify_data(int modify_data);
	private:
		int data;
		chain_node *next;

};

class chain_node_adv :public chain_node {
	public:
		chain_node_adv(float input_data);

		void show_float_data();
	private:
		float float_data;

};
